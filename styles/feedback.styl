
.feedback-container
  margin 0
  padding 0
  float left

.bb-feedback

  h2
    font-size 1.2rem

  .mood
    margin 0 auto
    text-align center

  .smiley
    display block
    -webkit-transform rotate(90deg)
    font-size 30pt

  .mood button
    cursor pointer
    font-size 20px
    height 4em
    margin 1em
    width 4em

  .textbox textarea
    height 6em
    width 100%

  .save
    padding 10px 20px

  .anonymous
    font-size small
    vertical-align middle

  img
    width 120px
    padding-right 10px

  .unselected
    opacity 0.5

  .selected
    opacity 1
